    "version": "0.2.0",
    "configurations": [
        {
        "name": "Debug Server",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/src/server/server",
        "args": ["8080"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
            }
        ],
        "miDebuggerPath": "/usr/bin/gdb"
        },
        {
        "name": "Debug Client",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/src/client/client",
